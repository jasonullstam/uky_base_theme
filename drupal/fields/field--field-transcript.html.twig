{% for item in items %}

    <div class="toggle-content">
        {% embed '@atoms/button.html.twig' with {
            label: "Show Transcript",
            button_style: 'button',
        } %}

            {% block content_button_button %}
                <span class="content-visible-text">Hide Transcript</span>
                <span class="content-hidden-text">Show Transcript</span>
            {% endblock %}

        {% endembed %}

        <div class="to-toggle">
            {{ item.content }}
        </div>
    </div>

{% endfor %}