{% embed '@organisms/callout.html.twig' with {
    title: 'Contact ' ~ content.field_name|render|striptags,
    callout_style_modifier: 'light'
} %}

    {% block callout_content %}
        <dl>
            {% if node.field_phone|length %}
            <dt>Phone</dt>
            <dd>
                {{ content.field_phone }}
            </dd>
            {% endif %}

            {% if node.field_email|length %}
            <dt>Email</dt>
            <dd>
                {{ content.field_email }}
            </dd>
            {% endif %}

            {% if node.field_address|length %}
            <dt>Address</dt>
            <dd>
                {{ content.field_address }}
            </dd>
            {% endif %}
        </dl>
    {% endblock %}

{% endembed %}

{% if node.field_education|length %}
{% embed '@organisms/callout.html.twig' with {
    title: 'Education',
    callout_style_modifier: 'light'
} %}

    {% block callout_content %}
        <dl>
            {{ content.field_education }}
        </dl>

    {% endblock %}

{% endembed %}
{% endif %}