{% set featured = paragraph.field_featured_podcast[0].entity %}
{% set buttons = [
        {
            title: 'All Podcasts',
            url: '/news-archive?news-type=5'
        }
] %}
{% if paragraph.field_itunes_link.uri %}
    {% set buttons = buttons|merge(
        [{
                title: 'Subscribe on iTunes',
                url: paragraph.field_itunes_link.uri,
                button_style: 'accent'
        }])
    %}
{% endif %}
{% include '@organisms/news-collection.html.twig' with {
    news_collection_modifier: 'feature-list',
    collection_headline: paragraph.field_title.value,
    collection_headline_modifier: 'section-title',
    feature_story: [
        {
            title: featured.title.value,
            url: path('entity.node.canonical', {'node': featured.id})|drupal_escape,
            image_url: featured.field_image? featured.field_image[0].entity.uri.value|resize('featured_teaser') : false,
            image_alt: featured.field_image? featured.field_image[0].alt.value : featured.title.value,
            show_story_meta: true,
            summary: featured.body.summary,
            story_media_type: featured.field_news_type_ref[0].entity.name.value,
            date: featured.created.value|date('M d Y'),
        }],
    buttons: buttons,
    stories: content.recent_podcasts_entity_view_1,
} %}
