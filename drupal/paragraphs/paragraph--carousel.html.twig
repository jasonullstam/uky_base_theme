{{ attach_library('ukd8/carousel') }}
{% set schema = paragraph.field_theme_color_scheme|length?  paragraph.field_theme_color_scheme.value : theme_settings.carousel_schema %}
{% set center = (paragraph.field_theme_carousel_centered|length and paragraph.field_theme_carousel_centered.value)? paragraph.field_theme_carousel_centered.value : theme_settings.center_carousel %}
{% include 'components-carousel-slab' with {
  headline: content.field_headline_group,
  body: content.field_body,
  figures: content.field_collection_items|children,
  carousel_style: center? 'carousel--center',
  slab_variant: {'default': '', 'light': 'slab--blue-gray', 'dark': 'slab--dark-blue', 'wildcat': 'slab--wildcat-blue'}[schema],
} %}