{% set n = paragraph.field_collection_items|length %}
{% if editorial_column %}
  {% set schema = '' %}
  {% set n = min(2, n) %}
{% else %}
  {% set schema = paragraph.field_theme_color_scheme|length?  paragraph.field_theme_color_scheme.value : theme_settings.statistics_schema %}
{% endif %}
{% if schema is empty %}
  {% set schema = 'slab--wildcat-white' %}
{% endif %}
{% set divided = (paragraph.field_theme_show_divisions|length and paragraph.field_theme_show_divisions.value)? paragraph.field_theme_show_divisions.value : theme_settings.divide_statistics %}
{% include 'molecules-grid' with { 
  head : content.field_headline_group,
  grid_type: "grid--" ~ n ~ "-up",
  grid_columns: content.field_collection_items|children,
  slab_variant: {'default': '', 'light': 'slab--blue-gray', 'dark': 'slab--dark-blue', 'wildcat': 'slab--wildcat-blue'}[schema],
  grid_style: divided? 'grid--divided',
} %}
