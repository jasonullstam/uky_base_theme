{% set n = paragraph.field_collection_items|length %}
{% if editorial_column %}
  {% set n = min(2, n) %}
{% endif %}
{% set schema = paragraph.field_theme_color_scheme|length?  paragraph.field_theme_color_scheme.value : theme_settings.scheme_settings.statistics_schema.value %}
{% set divided = (paragraph.field_theme_show_divisions|length and paragraph.field_theme_show_divisions.value)? paragraph.field_theme_show_divisions.value : theme_settings.layout_boolean_settings.divide_statistics.value %}
{% include 'molecules-grid' with { 
  head : content.field_headline_group,
  grid_type: "grid--" ~ n ~ "-up",
  grid_columns: content.field_collection_items|children,
  slab_variant: {'white': 'slab--wildcat-white', 'dark': 'slab--dark-blue'}[schema],
  grid_style: divided? 'grid--divided',
} %}
